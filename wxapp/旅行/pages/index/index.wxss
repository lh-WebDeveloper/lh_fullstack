/**index.wxss**/
swiper{
  height: 421rpx;
}
.slide-image{
  width: 100%;
  height: 100%;
}
.select-title{
  text-align: center;
  padding: 30rpx 0;
  color: #ab956d;
}
.select-top,
.select-bottom{
  width: 100%;
  height: 375rpx;
  display: flex;
}
.select-top__small{
  width: 375rpx;
  height: 100%;
}
.select-top__small navigator,
.select-top__small image,
.select-bottom navigator,
.select-bottom image{
  width: 100%;
  height: 100%;
}

.newest-box{
  padding: 10px;
}
.newest-list{
  display: inline-block;
  width: 100%;
  height: 100%;
  margin: 0 20rpx 20rpx 0;
  border-radius: 10px;
  background-color: #f5f6f5;
  text-align: center;
}
.newest-list image{
  width: 300px;
  height: 200px;
  margin: 10px; 
}
.newest-list:nth-child(2n) {
  margin-right: 0;
}